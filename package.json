{
  "name": "@paulownia/json-diff",
  "version": "1.1.1",
  "type": "module",
  "description": "A command-line tool to compare JSON files and show differences",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "bin": {
    "json-diff": "dist/bin/json-diff.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/lib",
    "dist/bin"
  ],
  "scripts": {
    "start": "tsx bin/json-diff.ts",
    "clean": "rm -rf dist",
    "build": "tsc && chmod +x dist/bin/json-diff.js",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "tsx --test --enable-source-maps --import @power-assert/node test/*.test.ts",
    "test:ci": "tsc && cp -R test/fixtures dist/test/fixtures && node --test dist/test/*.test.js",
    "lint": "eslint . --ext .js,.ts",
    "format": "eslint . --ext .js,.ts --fix",
    "check-type": "tsc --noEmit"
  },
  "keywords": [
    "json",
    "diff",
    "cli",
    "compare",
    "tool"
  ],
  "author": "hisanori",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulownia/node-json-diff.git"
  },
  "bugs": {
    "url": "https://github.com/paulownia/node-json-diff/issues"
  },
  "homepage": "https://github.com/paulownia/node-json-diff#readme",
  "dependencies": {
    "chalk": "^5.4.1",
    "deep-equal": "^2.2.3",
    "fast-array-diff": "^1.1.0",
    "jsonc-parser": "^3.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@power-assert/node": "^0.6.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/deep-equal": "^1.0.4",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.0.15",
    "eslint": "^9.31.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
